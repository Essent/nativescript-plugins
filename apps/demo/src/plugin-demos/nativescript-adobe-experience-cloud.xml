<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
  <Page.actionBar>
    <ActionBar title="nativescript-adobe-experience-cloud" icon="" class="action-bar">
    </ActionBar>
  </Page.actionBar>
  <StackLayout class="p-20">
    <ScrollView class="h-full">
      <StackLayout>
        <Button text="Click me for action" tap="{{action}}"/>
        <Button text="Click me for a new state" tap="{{nextState}}"/>
        <Button text="Click me to optIn" tap="{{optIn}}"/>
        <Button text="Click me to optOut" tap="{{optOut}}"/>

      </StackLayout>
    </ScrollView>
  </StackLayout>
</Page>