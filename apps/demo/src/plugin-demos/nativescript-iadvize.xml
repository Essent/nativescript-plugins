<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="nativescript-iadvize" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20">
        <ScrollView class="h-full">
          <StackLayout>
            <Button text="Login" tap="{{ onLogin }}" class="btn btn-primary"/>
            <Button text="Show chat" tap="{{ onShowChat }}" class="btn btn-primary"/>
            <Button text="Logout" tap="{{ onLogout }}" class="btn btn-primary"/>

          </StackLayout>
        </ScrollView>
    </StackLayout>
</Page>
